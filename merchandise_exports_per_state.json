{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": { "text": "Australian Merchandise Value per State" },
    "width": 800,
    "height": 400,
    "projection": {"type": "mercator"},
    "data": {
        "url": "https://raw.githubusercontent.com/nmar0042/FIT3179_Assignment_2/refs/heads/main/Australian_State_Merchandise_Exports.csv",
        "format": {"type": "csv"}
    },
    "transform": [
        {
            "filter": "datum.Year == Year_Selection && datum.Month == Month_Selection"
        },
        {
            "calculate": "datum.Value == 0 ? 1 : datum.Value", "as": "Exports"
        },
        {
            "lookup": "State",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/nmar0042/FIT3179_Assignment_2/refs/heads/main/ne_10m_admin_1_states_provinces.topojson",
                    "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
            },
            "key": "properties.name",
            "fields": ["type", "geometry", "properties"]
            }
        }
    ],
    "mark": {"type": "geoshape", "stroke": "#fff", "strokeWidth":
    0.5},
    "encoding": {
        "color": {
            "field": "Exports",
            "type": "quantitative",
            "scale": {"type": "log", "domain": [1, 25000]}
        },
        "tooltip": [
            {"field": "properties.name", "type": "nominal", "title": "State"},
            {"field": "Value", "type": "quantitative", "title": "Exports ($ Millions)"},
            {"field": "Month", "type": "quantitative", "title": "Month"},
            {"field": "Year", "type": "quantitative", "title": "Year"}
        ]
    },
    "params": [
        {
            "name": "Year_Selection",
            "value": 2023,
            "bind": {
                "input": "range",
                "min": 1988,
                "max": 2023,
                "step": 1,
                "name": "Year: "
            }
        },
        {
            "name": "Month_Selection",
            "value": 1,
            "bind": {
                "input": "range",
                "min": 1,
                "max": 12,
                "step": 1,
                "name": "Month: "
            }
        }
    ]
}